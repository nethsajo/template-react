{
  "extends": "./jsconfig.paths.json",
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "checkJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "types": ["vite/client", "vite-plugin-svgr/client", "node"]
  },
  "include": ["./src/**/*.js", "./src/**/*.ts", "./src/**/*.jsx"],
  "exclude": ["./node_modules"],
  "references": [{ "path": "./jsconfig.node.json" }]
}
