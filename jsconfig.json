{
  "extends": "./jsconfig.paths.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "types": ["vite/client", "vite-plugin-svgr/client", "node"]
  },
  "include": ["./src/**/*.js", "./src/**/*.ts", "./src/**/*.jsx"],
  "exclude": ["./node_modules"],
  "typeAcquisition": {
    "enable": true,
    "include": ["react", "react-dom"]
  }
}
